<%= render :partial => 'breadcrumbs' %>

<div class="container">

    <div class="card results">
      <div class="card-body">
        <img class="rounded float-left mr-3" src="https://via.placeholder.com/150" alt="">
        <h3 class="card-title"><%= @provider.name %></h3>
        <h6 class="card-subtitle mb-2 text-muted"><%= @provider.reviews.length %> Reviews</h6>
        <%= link_to 'Review this Provider', new_review_path(@provider[:id]), class: "btn btn-outline-primary my-3 my-sm-3" %>
        <%= link_to 'Request details & pricing', new_request_path(@provider[:id]), class: "btn btn-primary my-3 my-sm-3 " %>
        <hr>
        <h5 class="card-title">About</h5>
        <p class="card-text">Maxlife Care is a Doctor lead organisation with greater than 50 years of combined experience. A team of well trained staff to provide quality care in the disability and aged care sector.</p>

        <p class="card-text"><span class="font-weight-bold">Address: </span><%= @provider.address %></p>
        <p class="card-text"><span class="font-weight-bold">Phone: </span><%= @provider.phone %></p>
        <p class="card-text"><%= link_to "Visit Website", "http://#{@provider.website}", :target => "_blank"  %></p>
        <hr>
        <h5 class="card-title">Services</h5>

            <% @provider.services.each do |service| %>
            <span class="badge badge-pill badge-success"><%= service.service %></span>
              <% end %>
        <hr>

        <h5 class="card-title">Reviews</h5>

        <% if @provider.reviews.any? %>
          <ul>
            <% @provider.reviews.each do |review| %>
              <li>Review #<%= review.id %> | <%= link_to 'update', edit_review_path(review[:id]) %> | <%= link_to 'delete', delete_review_path(review[:id]), method: 'delete' %></li>
          <% end %>
          </ul>
          <% else %>
        <p>No reviews yet. <%= link_to 'Review this Provider', new_review_path(@provider[:id]) %></p>
        <% end %>
      </div>
    </div>
    <br>




</div>